<div>
  <%if logged_in? %>
      <a class="up_answer_comment_count"
        href="/questions/<%= comment.commentable.question.id %>/answers/<%= comment.commentable.id %>/comments/<%= comment.id %>/votes/up"><span class="glyphicon glyphicon-chevron-up"></span></a>
      <a class="down_answer_comment_count"
        href="/questions/<%= comment.commentable.question.id %>/answers/<%= comment.commentable.id %>/comments/<%= comment.id %>/votes/down"><span class="glyphicon glyphicon-chevron-down"></span>
      </a>
  <% else %>
      <a class="up_answer_comment_count"
        href="#"><span class="glyphicon glyphicon-chevron-up"></span></a>
      <a class="down_answer_comment_count"
        href="#"><span class="glyphicon glyphicon-chevron-down"></span></a>

  <% end %>
  <span >
      <%= total_votes(comment) %>
  </span>
</div>
<li class="comments"><%= comment.text %> - <%= comment.commenter.username %></li>
